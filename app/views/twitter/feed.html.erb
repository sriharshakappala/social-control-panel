<div class="container-fluid">
	<div class="row">
		<div class="col-lg-12">
			<div class="page-header">
				<h1>
					<small><i class="fa fa-newspaper-o"></i> Newsfeed</small>
				</h1>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-offset-1 col-lg-10">
			<%= form_tag("/twitter/post_tweet", method: "post") do %>
				<div class="form-group">
					<div class="row">
						<div class="col-md-6">
							<%= text_area_tag(:tweet, "Your tweet goes here...", size: "66*6") %>
						</div>
						<div class="col-md-6">
							<%= submit_tag "Tweet", :class => "btn btn-success btn-sm" %>
						</div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-offset-1 col-lg-10">
			<table class="table table-striped table-hover">
				<tr class="warning">
					<th></th>
					<th>User</th>
					<th>Tweet</th>
					<th>Actions</th>
				</tr>
				<% @tweets.each do |tweet| %>
					<tr>
						<td></td>
						<td><%= tweet.user.name %></td>
						<td><%= tweet.text %></td>						
						<td>
							<a href="#" class="btn btn-warning btn-xs table-actions"><i class="fa fa-reply"></i></a>
							<% if tweet.user.name != 'Lazy Bee' %>
								<%#= link_to content_tag(:i,nil, class: 'fa fa-retweet'), retweet_twitter_index_path(tweet_id: tweet.id),class: "btn btn-warning btn-xs table-actions" %>
								<a href="#" class="btn btn-warning btn-xs table-actions"><i class="fa fa-retweet"></i></a>
							<% end %>
						</td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>