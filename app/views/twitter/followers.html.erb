<div class="container-fluid">
	<div class="row">
		<div class="col-lg-12">
			<div class="page-header">
				<h1>
					<small><i class="fa fa-users"></i> Followers</small>
				</h1>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-offset-1 col-lg-10">
		</div>
	</div>
	<div class="row">
		<div class="col-lg-offset-1 col-lg-10">
			<table class="table table-striped table-hover">
				<% @followers.each do |f| %>
					<tr>
						<td></td>
						<td><%= image_tag f.profile_image_url %></td>
						<td><%= f.name %></td>
						<td><%#= f.description %></td>
						<td><a href="#" class="btn btn-danger btn-xs table-actions"><i class="fa fa-minus-circle"></i></a></td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>