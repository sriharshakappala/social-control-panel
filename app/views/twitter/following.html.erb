<div class="container-fluid">
	<div class="row">
		<div class="col-lg-12">
			<div class="page-header">
				<h1>
					<small><i class="fa fa-user"></i> Following</small>
				</h1>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-offset-1 col-lg-10">
		</div>
	</div>
	<div class="row">
		<div class="col-lg-offset-1 col-lg-10">
			<table class="table table-striped table-hover">
				<% @following.each do |f| %>
					<tr>
						<td></td>
						<td><%= image_tag f.profile_image_url %></td>
						<td><%= f.name %></td>
						<td><%= f.description %></td>
						<td>
							<%= link_to content_tag(:i,nil, class: 'fa fa-minus-circle'), block_twitter_index_path(user_id: f.id, task: "following"),class: "btn btn-danger btn-xs table-actions" %>
						</td>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>