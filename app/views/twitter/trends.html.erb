<div class="container-fluid">
	<div class="row">
		<div class="col-lg-12">
			<div class="page-header">
				<h1>
					<small><i class="fa fa-rocket"></i> Trends</small>
				</h1>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-offset-1 col-lg-10">
		</div>
	</div>
	<div class="row">
		<div class="col-lg-offset-1 col-lg-10">
			<table class="table table-striped table-hover">
				<tr class="warning">
					<th></th>
					<th>Trend</th>
					<th>Search URL</th>
				</tr>
				<% @trends.each do |t| %>
					<tr>
						<td></td>
						<td><%= t.name %></td>
						<td><%= t.url %></td>						
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>